@import "dice/dice-template.wxss";

.canvas {
  display: flex;
  flex-direction: column;
  align-items: center;
}

#cover {
    position: absolute;
    width: 750rpx;
    height: 650rpx;
    top:10%;
    left: 50%;
    margin-left: -375rpx;
    background-color: #BBBBBB;

}

page {
  background-color: #fbf9fe;
  height: 100%;
}
.page__hd{
    padding: 50rpx 50rpx 100rpx 50rpx;
    text-align: center;
}
.page__title{
    display: inline-block;
    padding: 20rpx 40rpx;
    font-size: 32rpx;
    color: #AAAAAA;
    border-bottom: 1px solid #CCCCCC;
}
.page__desc{
    display: none;
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #BBBBBB;
}
.section{
    margin-bottom: 80rpx;
}
.section__title{
    margin-bottom: 16rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.picker{
  padding: 26rpx;
  background-color: #FFFFFF;
}



#header{
    position: absolute;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    line-height:150rpx;
    top:5%;
    left: 50%;
    margin-left: -300rpx;
    font-size: 80rpx;
    width: 600rpx;
    height:150rpx;
    text-align: center;
}

.btn{
    width:150rpx;
    height: 150rpx;
    z-index: 1;
}
.btn image{
    width:150rpx;
    height: 150rpx;
}
.btn image:active{
    position: relative;
    left: 15rpx;
    top:15rpx;
    width:120rpx;
    height: 120rpx;

}

#dice-count{
    width: 200rpx;
    height: 200rpx;
    font-family: "microsoft yahei";
    color:white;
}

#dice-zone{
    position: absolute;
    width: 750rpx;
    height: 650rpx;
    top:10%;
    left: 50%;
    margin-left: -375rpx;
}

#btn-roll-container1{
    position: absolute;
    bottom: 5%;
    left:35%;
    margin-left: -75rpx;
    width: 150rpx;
    height: 150rpx;
}


#btn-roll-container2{
    position: absolute;
    bottom: 5%;
    left:65%;
    margin-left: -75rpx;
    width: 150rpx;
    height: 150rpx;
}

#btn-roll{
    display: block;
    text-align: center;
    width: 150rpx;
    height: 150rpx;
    line-height: 150rpx;
    font-size: 50rpx;
    border: 2px solid white;
    border-radius: 80rpx;
}
#btn-roll:active{
    position: relative;
    width: 120rpx;
    height:120rpx;
    top:15rpx;
    left:15rpx;
    font-size: 40rpx;
    line-height: 120rpx;
}